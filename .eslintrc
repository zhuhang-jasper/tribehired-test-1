{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jquery": true
    },
    "plugins": [
        "import",
        "standard",
        "promise",
        "node"
    ],
    "extends": [
        "eslint:recommended",
        "standard"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "no-console": "off",
        "no-var": "warn",
        "no-unused-vars": "warn",
        "prefer-const": [
            "warn",
            {
                "destructuring": "any",
                "ignoreReadBeforeAssign": false
            }
        ],
        "no-throw-literal": "off",
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1,
                "ignoreComments": false
            }
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "space-before-function-paren": "off",
        "padded-blocks": "off",
        "eqeqeq": "off",
        "no-return-await": "warn",
        "no-async-promise-executor": "warn",
        "no-labels": "off",
        "camelcase": "warn",
        "no-inner-declarations": "off",
        "curly": ["warn", "all"],
        "brace-style":["warn"],
        "key-spacing": "warn"
    }
}